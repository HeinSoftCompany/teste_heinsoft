{
  "scripts": {
    "format": "prettier --write \"**/*.{js,css,html}\"",
    "lint:js": "eslint \"src/**/*.{js,mjs,cjs}\"",
    "lint:html": "eslint \"src/**/*.html\"",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "lint:js:fix": "eslint \"src/**/*.{js,mjs,cjs}\" --fix",
    "lint:html:fix": "eslint \"src/**/*.html\" --fix",
    "lint:css:fix": "stylelint --fix \"src/**/*.css\"",
    "lint:fix": "npm run lint:js:fix && npm run lint:html:fix && npm run lint:css:fix"
  },
  "devDependencies": {
    "@eslint/css": "^0.9.0",
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0"
  }
}
